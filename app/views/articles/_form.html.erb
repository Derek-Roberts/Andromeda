<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>Please submit a URL to an article you'd like to summarize.  By default the article's title will be picked but if you would like to enter a custom one go right ahead!</p><br>

  <div class="field">
    <%= f.label :title, "Custom Title: " %><br>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :URL %><br>
    <%= f.text_area :URL %>
  </div>
  <div class="field">
    <%= f.label :private %><br>
    <%= f.radio_button :private, '0', :checked => true %> <%= f.label :private, "Public" %>
    <%= f.radio_button :private, '1' %> <%= f.label :private, "Private" %>
  </div>
  <br>
  <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } %> |

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
